@model List<Genrev.Web.App.Customers.Models.AccountTypeListItemVM>

<h2>Account Types</h2>

<table>
    <tr>
        <td>
            @Html.DevExpress().TextBox(
                s => {
                    s.Name = "AddAccountType";
                    s.Width = 170;
                }
            ).GetHtml()
        </td>
        <td style="padding-left: 5px;">
            @Html.DevExpress().Button(
                s => {
                    s.Name = "AddAccountTypeButton";
                    s.Text = "Add";
                    s.Width = 75;
                }
            ).GetHtml()
        </td>
    </tr>
</table>

<div class="spacer-10"></div>

@Html.Partial("AccountTypesGrid", Model)



