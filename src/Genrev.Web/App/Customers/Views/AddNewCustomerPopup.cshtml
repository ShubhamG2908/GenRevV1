@model Genrev.Web.App.Customers.Models.AddCustomerVM

<h3>Add New Customer</h3>

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerName";
        s.Properties.Caption = "Name";
        s.Properties.CaptionCellStyle.Width = 100;
        s.Properties.CaptionStyle.CssClass = "label-required";
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerAddress1";
        s.Properties.Caption = "Address 1";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerAddress2";
        s.Properties.Caption = "Address 2";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerCity";
        s.Properties.Caption = "City";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerState";
        s.Properties.Caption = "State";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerPostalCode";
        s.Properties.Caption = "Postal/Zip";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerCountry";
        s.Properties.Caption = "Country";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

@Html.DevExpress().TextBox(
    s => {
        s.Name = "AddCustomerPhone";
        s.Properties.Caption = "Phone";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).GetHtml()

<div class="spacer-10"></div>

@Html.DevExpress().ComboBox(
    s => {
        s.Name = "AddCustomerCustomerType";
        s.Properties.ValueField = "ID";
        s.Properties.ValueType = typeof(int);
        s.Properties.TextField = "Name";
        s.Properties.Caption = "Type";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).BindList(Model.CustomerTypesList).GetHtml()

@Html.DevExpress().ComboBox(
    s => {
        s.Name = "AddCustomerIndustry";
        s.Properties.ValueField = "ID";
        s.Properties.ValueType = typeof(int);
        s.Properties.TextField = "Name";
        s.Properties.Caption = "Industry";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).BindList(Model.IndustriesList).GetHtml()

@Html.DevExpress().ComboBox(
    s => {
        s.Name = "AddCustomerAccountType";
        s.Properties.ValueField = "ID";
        s.Properties.ValueType = typeof(int);
        s.Properties.TextField = "Name";
        s.Properties.Caption = "Account Type";
        s.Properties.CaptionCellStyle.Width = 100;
    }
).BindList(Model.AccountTypesList).GetHtml()

<div class="clearfix spacer-10"></div>

<table style="float: right;">
    <tr>
        <td>
            @Html.DevExpress().Button(s => { s.Name = "CustomerAddNewOkButton"; s.Text = "OK"; }).GetHtml()
        </td>
        <td style="padding-left: 5px;">
            @Html.DevExpress().Button(s => { s.Name = "CustomerAddNewCancelButton"; s.Text = "Cancel"; }).GetHtml()
        </td>
    </tr>
</table>


