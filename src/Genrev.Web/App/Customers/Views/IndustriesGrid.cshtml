@model List<Genrev.Web.App.Customers.Models.IndustryListItemVM>

@Html.DevExpress().GridView(
    s => {

        s.Name = "CustomerIndustriesGrid";
        s.KeyFieldName = "ID";
        s.CallbackRouteValues = new { Controller = "Customers", Action = "CustomerIndustriesCallback" };
        s.SettingsBehavior.AllowFocusedRow = true;
        s.SettingsBehavior.AllowSelectByRowClick = true;
        s.SettingsBehavior.AllowSelectSingleRowOnly = true;
        s.SettingsLoadingPanel.Mode = GridViewLoadingPanelMode.Disabled;

        s.SettingsPager.PageSize = 16;

        s.HtmlDataCellPrepared = (sender, e) => {
            e.Cell.Attributes.Add("data-dym-cell", "CustomerIndustriesGrid");
            e.Cell.Attributes.Add("data-dym-visibleIndex", e.VisibleIndex.ToString());
        };

        s.Width = 250;

        var col = s.Columns.Add("colName");
        col.Caption = "Industry";
        col.FieldName = "Name";

    }
).Bind(Model).GetHtml()