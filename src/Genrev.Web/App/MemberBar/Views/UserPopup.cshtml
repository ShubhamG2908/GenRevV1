

@Html.DevExpress().PopupControl(
    s => {
        s.Name = "memberBarUserPopup";
        s.PopupElementID = "memberbar-btn-user";

        s.Width = 235;
        //s.Height = 400;

        s.ShowCloseButton = false;
        s.ShowFooter = false;
        s.ShowHeader = false;
        s.AllowDragging = false;
        s.AllowResize = false;
        s.PopupAction = PopupAction.LeftMouseClick;
        s.CloseAction = CloseAction.OuterMouseClick;
        s.CloseOnEscape = false;

        s.PopupHorizontalAlign = PopupHorizontalAlign.RightSides;
        s.PopupVerticalAlign = PopupVerticalAlign.Below;
        s.PopupVerticalOffset = -14;

        s.Styles.Content.CssClass = "dx-popup-nopad";

        s.SetContent(
            () => {
                Html.RenderAction("UserPopupContent", "MemberBar");
            }
        );
    }

).GetHtml()